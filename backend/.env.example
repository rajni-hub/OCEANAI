# ============================================
# OCEAN AI Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# cp .env.example .env
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
# For SQLite (Development - Easiest):
DATABASE_URL=sqlite:///./oceanai.db

# For PostgreSQL (Production - Recommended):
# DATABASE_URL=postgresql://username:password@localhost:5432/oceanai
# Example: DATABASE_URL=postgresql://oceanai_user:your_password@localhost:5432/oceanai

# ============================================
# SECURITY - JWT AUTHENTICATION
# ============================================
# REQUIRED: Generate a secure random key (minimum 32 characters)
# Generate using: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
# Or: openssl rand -hex 32
SECRET_KEY=change-this-secret-key-in-production-minimum-32-characters

# JWT Algorithm (default: HS256, usually no need to change)
ALGORITHM=HS256

# JWT Token expiration time in minutes (default: 30)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# GOOGLE GEMINI API
# ============================================
# REQUIRED FOR AI FEATURES (Content Generation, Refinement, AI Suggest)
# Get your API key from: https://aistudio.google.com/app/apikey
# Without this key, AI features will not work, but other features will work fine
GEMINI_API_KEY=

# ============================================
# CORS (Cross-Origin Resource Sharing)
# ============================================
# Comma-separated list of allowed frontend origins (no spaces)
# For development:
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# For production, add your frontend domain:
# CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Application name (used in API documentation)
APP_NAME=OCEAN AI Platform

# Environment: development, staging, or production
ENVIRONMENT=development

# Debug mode: True for development, False for production
DEBUG=True
